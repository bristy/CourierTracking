<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kumar.brajesh.couriertracker"
    android:versionCode="2"
    android:versionName="1.1">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TrackServiceActivity"
            android:label="@string/app_name"
            android:configChanges="screenSize|screenLayout|orientation|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="screenSize|screenLayout|orientation|uiMode"
            android:name=".TrackDetailActivity"
            android:label="@string/title_activity_track_detail" >
        </activity>
    </application>

</manifest>
